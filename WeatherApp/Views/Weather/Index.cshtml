
@{
    ViewBag.Title = "Index";
}

@model WeatherApp.Models.WeatherResponse

<h2>Consultar Clima</h2>

<form method="post">
    <input type="text" name="ciudad" placeholder="Ciudad" required />
    <button type="submit">Buscar</button>
</form>

@if (Model != null)
{
    <h3>Clima en @Model.name</h3>
    <p>Temperatura: @Model.main.temp °C</p>
    <p>Descripción: @Model.weather[0].description</p>
    <p>Humedad: @Model.main.humidity %</p>
    <p>Viento: @Model.wind.speed m/s</p>
}

@if (ViewBag.ErrorMessage != null) 
{ 
    <h4 style="color:red;">@ViewBag.ErrorMessage</h4>
}

